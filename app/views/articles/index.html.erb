<div>
  <h2 class="border">Listing articles</h2>
</div>

<div>
  <table>
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th colspan="1"></th>
      <th>Edit</th>
      <th colspan="1"></th>
    </tr>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.text %></td>
        <td class="edit">
          <%= link_to 'Show', article_path(article) %>
        </td>
        <td class="edit">
          <%= link_to 'Edit', edit_article_path(article) %>
        </td>
        <td class="edit">
          <%= link_to 'Destroy', article_path(article),
                method: :delete,
                data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </table>
</div>
<hr>
<%= link_to 'New article', new_article_path %>